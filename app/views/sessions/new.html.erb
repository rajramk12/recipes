<%= render 'shared/pagetitle', pageTitle: 'Sign in'%>
  <div class="row">
    <div class="col-md-12">
      <%= form_for( :session, :html => { class:"form-horizontal", role:"form"}, url: login_path ) do |form| %>
          <div class="form-group">
            <div class="form-group">
              <div class="control-label col-md-2">
                <%= form.label :email %><br/>
              </div>
              <div class="col-md-8">
                <%= form.email_field :email, class:"form-control",placeholder:'Enter your Email ID' %>
              </div>
              </div>
              <div class="form-group">
              <div class="control-label col-md-2">
                <%= form.label :password %><br/>
              </div>
              <div class="col-md-8">
                <%= form.password_field :password, class:"form-control",placeholder:'Enter your Password' %>
              </div>
              </div>
            <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <%= form.submit 'Sign In', class:"btn btn-primary btn-lg btn-xlarge"%>
              </div>
           </div>
      <% end %>
      <div class="col-md-offset-4">
      <%= link_to "New user? Sign up now!", signup_path,class:"btn btn-success btn-small" %>
      </div>
  </div>

