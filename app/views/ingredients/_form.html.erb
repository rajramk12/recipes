<%= render "shared/errors", orm: @ingredient %>
<div class="row">
  <div class="col-md-12">
  <%= form_with model: @ingredient, :html => { class:"form-horizontal" , role:"form"} do |form| %>
      <div class="form-group">
          <div class="control-label col-md-2">
            <%= form.label :name , "Ingredient Name"%>
          </div>
          <div class="col-md-8">
            <%= form.text_field :name, class:"form-control",placeholder:'Ingredient', autofocus: true %>
          </div>
        </div>
        <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= form.submit(@ingredient.new_record? ? "Add Ingredient" : 'Update Ingredient' , class:"btn btn-primary btn-lg btn-small" )%>
          </div>
        </div>
  <% end %>
<div class="col-md-offset-4">
  <%= link_to "Back to Home Page", root_path,class:"btn btn-danger btn-small" %>
</div>
 </div>

