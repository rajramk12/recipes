<%= render 'shared/pagetitle', pageTitle: 'Listing Ingredients'%>
<div align="center">
<%= will_paginate %>
</div>
<div align="center">
<% @ingredients.each  do |ingredient| %>
      <div class="row">
        <ul class="listing">
        <div class="well col-md-4 col-md-offset-4 center">
          <li class="chef-title"><%= link_to ingredient.name.capitalize, ingredient_path(ingredient) %></li>
          <%= pluralize(ingredient.recipes.count , 'Recipe') if ingredient.recipes.count >= 0 %>
          <% if logged_in? && current_user.admin? %>
           <li> <%= link_to 'Edit Ingredient', edit_ingredient_path(ingredient),class: "btn btn-warning" %></li>
          <%end%>
          <br/>
        </div>
        </ul>
    </div>
  <% end %>
</div>
<div align="center">
<%= will_paginate %>
</div>
