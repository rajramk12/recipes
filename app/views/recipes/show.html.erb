<div class="well container">
  <%= render 'shared/pagetitle', pageTitle: @recipe.name.capitalize %></h1>
  <div class="well row">
    <div class="col-md-10 col-md-offset-2">
     <h3 class="center description"><strong> Steps </strong></h3>
      <hr/>
      <p> <%= simple_format(@recipe.description) %> </p>
    </div>
  </div>
  <div class="row">
    <div class="recipe-actions col-md-10-offset-1">
      <p class="center">
      <%= link_to gravatar_for(@recipe.chef, size: 120) ,recipes_path%>
      <p>
      <small> <%= @recipe.chef.chefname%>
      Created : <%= time_ago_in_words(@recipe.created_at)  %> Ago </small><br/>
      <%= link_to "Edit Recipe" ,edit_recipe_path(@recipe), class:"btn btn-warning"%>
      <%= button_to 'Destroy', recipe_path(@recipe), data: { confirm: 'Are you sure?'}, method: :delete, class: "btn btn-danger" %>
      </p>
    </div>
   </div>
</div>
